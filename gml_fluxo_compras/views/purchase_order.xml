<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="gml_fluxo_compras_order_form" model="ir.ui.view">
        <field name="name">gml.fluxo.compras.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="invoice_to" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="invoice_partner" attrs="{'invisible': [('invoice_to', '=', 'self')], 'readonly': [('state', '!=', 'draft')]}" />
            </field>
        </field>
    </record>
</odoo>
