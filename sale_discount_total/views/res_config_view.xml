<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_discount_config">
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="invoicing_settings" position="after" >
                    <h2>Descontos</h2>
                    <div class="row mt16 o_settings_container" id="discount_settings">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="discount_approval"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="discount_approval"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': [('discount_approval','=',False)]}">
                            <div class="o_setting_left_pane">
                                <field name="limit_discount" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="limit_discount"/>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>
