<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="kk_site_purchase_form" model="ir.ui.view">
        <field name="name">kk_site_purchase_form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">

            <field name="payment_term_id" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </field>

            <!-- CHANGES DATE_PLANNED ON THE PURCHASE.ORDER MODEL -->
            <xpath expr="//page[2]//field[@name='date_planned']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[2]//field[@name='date_planned']" position="after">
                <field name="kk_date_planned" nolabel="1" required="1" attrs="{'readonly': [('state', 'not in', ('draft', 'sent'))]}" />
            </xpath>
            <!-- CHANGES DATE_PLANNED ON THE PURCHASE.ORDER.LINE MODEL -->
            <field name="date_planned" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="date_planned" position="after">
                <field name="kk_date_planned" required="1"/>
                <field name="kk_delivery_date" />
            </field>

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="kk_site_id" can_create="false"/>
                <field name="kk_site_partner_id" can_create="false" readonly="1" />
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//form//field[@name='product_id']" position="after">
                <field name="kk_site_id" can_create="false"/>
                <field name="kk_site_partner_id" can_create="false" readonly="1" />
            </xpath>
            <xpath expr="//field[@name='order_line']//form//field[@name='date_planned']" position="after">
                <separator />
                <field name="create_uid" readonly="1" />
                <field name="create_date" readonly="1" />
                <field name="kk_delivery_date" readonly="1" />
            </xpath>
        </field>
    </record>

    <record id="kk_site_purchase_line_tree" model="ir.ui.view">
        <field name="name">kk.site.purchase.line.tree</field>
        <field name="model">purchase.order.line</field>
        <field name="arch" type="xml">
            <tree string="Linhas do Pedido de Compra" create="0" delete="0">
                <field name="order_id" />
                <field name="partner_id" />
                <field name="product_id" />
                <field name="kk_site_id" />
                <field name="kk_site_city_state" />
                <field name="kk_site_partner_id" />
                <field name="product_qty" />
                <field name="create_uid" />
                <field name="create_date" />
                <field name="kk_date_planned" />
                <field name="kk_delivery_date" />
                <field name="state" />
                <field name="price_subtotal" />
            </tree>
        </field>
    </record>

    <record id="kk_site_purchase_line_tree_search" model="ir.ui.view">
        <field name="name">kk.site.purchase.line.tree.search</field>
        <field name="model">purchase.order.line</field>
        <field name="arch" type="xml">
            <search string="Linhas do Pedido de Compra">
                <filter string="Compras Entregues" name="purchase_delivered" domain="[('kk_delivery_date', '!=', False)]"/>
                <field name="order_id"/>
                <field name="partner_id"/>
                <field name="kk_site_id"/>
                <field name="kk_site_city_state"/>
                <field name="kk_site_partner_id"/>
                <field name="product_id"/>
                <field name="create_uid"/>
                <group expand="1" string="Agrupar">
                    <filter string="ReferÃªncia PDC" name="group_order_id" context="{'group_by':'order_id'}"/>
                    <filter string="Fornecedor" name="group_partner_id" context="{'group_by':'partner_id'}"/>
                    <filter string="Site" name="group_kk_site_id" context="{'group_by':'kk_site_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="kk_site_purchase_line_action" model="ir.actions.act_window">
        <field name="name">Linhas do Pedido de Compra</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="kk_site_purchase_line_tree_search"/>
        <field name="view_id" ref="kk_site_purchase_line_tree"/>
    </record>

    <menuitem name="Linha do Pedido de Compra" id="menu_purchase_line_tree" action="kk_site_purchase_line_action"
          parent="purchase.menu_procurement_management" sequence="9"/>

</odoo>

