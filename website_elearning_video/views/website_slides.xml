<odoo>
    <data>
        <template id="slide_library_assets" inherit_id="web.assets_frontend">
            <xpath expr="." position="inside">
              <script type="text/javascript" src="/website_elearning_video/static/src/js/main.js"></script>
            </xpath>
          </template>

        <template id="slide_fullscreen_sidebar_category_inherited" inherit_id="website_slides.slide_fullscreen_sidebar_category">
            <xpath expr="//ul[hasclass('o_wslides_fs_sidebar_section_slides')]//t[@t-foreach='slides']/li" position="attributes">
              <attribute name="t-attf-data-attachment-id">{{slide.slide_attachment.id}}</attribute>
            </xpath>
        </template>

        <template id="slide_content_detailed_inherited" inherit_id="website_slides.slide_content_detailed">
            <xpath expr="//div[hasclass('o_wslides_lesson_content_type')]/div[@t-if=&quot;slide.slide_type == 'video' and slide.document_id&quot;]" position="replace">
                <div t-if="slide.slide_type == 'video'" class="embed-responsive embed-responsive-16by9 embed-responsive-item mb8">
                    <t t-if="slide.document_id">
                        <t t-raw="slide.embed_code" />
                    </t>
                    <t t-else=" ">
                        <div class="embed-responsive embed-responsive-16by9 embed-responsive-item mb8 video-file">
                            <video controls="true" preload="metadata">
                                <source t-attf-src="/get_video/#{slide.slide_attachment.id}" type="video/mp4" />
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    </t>
                </div>
            </xpath>
        </template>
    </data>
</odoo>