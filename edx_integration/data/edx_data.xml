<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="mail_template_data_edx_welcome" model="mail.template">
            <field name="name">edx: new user</field>
            <field name="model_id" ref="edx_integration.model_edx_wizard_user"/>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="subject">Your Odoo account at ${user.company_id.name}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
            <field name="user_signature" eval="True"/>
            <field name="body_html"><![CDATA[
<p>
    ${object.user_id.name or ''},
</p>
<p>
    Seu acesso ao EDX foi liberado.
</p>
<p>
    Seus dados para acesso são:
</p>
<ul>
    <li>Usuário: ${object.user_id.login or ''}</li>
    <li>Senha: ${object.user_id.edx_password or ''}</li>
</ul>
<p>
    O acesso aos cursos poderá ser realizado através do seguinte endereço:
</p>
<ul>
    <li><a href="cursos.trustcode.com.br">cursos.trustcode.com.br</a></li>
</ul>
<p>
${object.wizard_id.welcome_message or ''}]]></field>
        </record>
    </data>
</odoo>