<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_wizard_increment" model="ir.ui.view">
            <field name="name">view.wizard.increment.form</field>
            <field name="model">wizard.multicompany.increment</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="product_id" />
                        <field name="product_qty" />
                        <field name="product_uom_id" />
                        <field name="qty_increment"/>
                        <field name="total_quantity"/>
                    </group>
                    <footer>
                        <button string="Confirm" name="action_confirm" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
