<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="additional_info_wizard" model="ir.ui.view">
        <field name="name">additional.info.wizard</field>
        <field name="model">additional.info.wizard</field>
        <field name="arch" type="xml">
            <form string="Product Configurator">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group class="col-xs-9">
                        <field name="additional_info" />
                    </group>
                </sheet>
                <footer>
                    <button type="object" name="action_confirm" class="oe_highlight" string="Confirm"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
