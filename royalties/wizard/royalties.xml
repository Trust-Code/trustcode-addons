<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_royalties_wizard_form" model="ir.ui.view">
        <field name="name">Royalties Wizard</field>
        <field name="model">royalties.wizard</field>
        <field name="arch" type="xml">
            <form>
              <p class="oe_grey">
                  Um pagamento será criado para todos os contratos selecionados.
                  Cada contrato criará um pagamento no menu (Contabilidade/Compras/Recebimento de Compras)
                  e poderão ser filtados pela Referência 'Royalties'
              </p>
              <group>
                <field name="royalties_ids" />
              </group>
              <footer>
                <button name="run_royalties_payment" string="Calculate comissions" type="object" default_focus="1" class="oe_highlight"/>
                or
                <button string="Cancel" class="oe_link" special="cancel" />
              </footer>
            </form>
        </field>
    </record>

    <record id="action_royalties_wizard_form" model="ir.actions.act_window">
            <field name="name">Royalties Payment</field>
            <field name="res_model">royalties.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
    </record>

    <menuitem id="menu_royalties_wizard" name="Royalties Payment" parent="account.menu_finance_entries"
        action="action_royalties_wizard_form" sequence="20"/>

</odoo>
