<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_project_task_materials_report" model="report.paperformat">
        <field name="name">Formato Report Manutenção</field>
        <field name="default" eval="True" />
        <field name="orientation">Portrait</field>
        <field name="margin_top">7.0</field>
        <field name="margin_left">7.0</field>
        <field name="margin_right">7.0</field>
        <field name="margin_bottom">7.0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
    </record>

    <report
        id="action_project_task_materials_reportt"
        model="project.task"
        report_type="qweb-pdf"
        string="Report de Manutenção"
        name="project_task_materials_report.materials_report"
        file="project_task_materials_report.materials_report"
        paperformat="paperformat_project_task_materials_report"
        />

    <template id="project_task_materials_report_assets_backend" name="Project Task Materials assets" inherit_id="report.assets_common">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css" href="/project_task_materials_report/static/css/project_task_materials_report.css"/>
        </xpath>
    </template>

    <template id="materials_report">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="report.internal_layout">
                    <div class="page project_task_materials_report">
                        <br/>
                        <div class="row">
                            <div class="col-xs-12">
                                <table class="table infoTable border-div">
                                    <thead>
                                        <tr>
                                            <th colspan="5"><h2>Ordem de Manutenção 
                                                <span t-field="o.name"/></h2>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Equipamento:</td>
                                            <td><span t-field="o.x_product_id"/></td>
                                            <td></td>
                                            <td>Data Criação</td>
                                            <td><span t-field="o.create_date"/></td>
                                        </tr>
                                        <tr>
                                            <td>Tipo de Manutenção:</td>
                                            <td><span t-field="o.project_id"/></td>
                                            <td></td>
                                            <td>Data Início</td>
                                            <td><span t-field="o.date_start"/></td>
                                        </tr>
                                        <tr>
                                            <td>Descrição:</td>
                                            <td><span t-field="o.description"/></td>
                                            <td></td>
                                            <td>Data Término</td>
                                            <td><span t-field="o.date_end"/></td>
                                        </tr>
                                        <tr></tr>
                                        <tr>
                                            <td>Pedidos de Venda:</td>
                                            <td><span t-field="o.sale_line_id.order_id"/></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td>Produto</td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br/>
                                <h2>Peças Planejadas</h2>
                                <table class="table productsTable table-bordered border-div">
                                    <thead>
                                        <tr>
                                            <th>Peças</th>
                                            <th>Quantidade</th>
                                            <th>Unidade de Medida</th>
                                            <th>Descrição</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.x_material_ids" t-as="l">
                                            <tr>
                                                <td><span t-esc="l.x_product_id"></span></td>
                                                <td><span t-field="l.x_quantity"></span></td>
                                                <td><span t-field="l.x_product_id.uom_id"></span></td>
                                                <td><span t-esc="l.x_product_id.x_name"></span></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                                <br/>
                                <h2>Esforço</h2>
                                <table class="table workTable table-bordered border-div">
                                    <thead>
                                        <tr>
                                            <th>Funcionário</th>
                                            <th>Atividade</th>
                                            <th>Data</th>
                                            <th>Início</th>
                                            <th>Fim</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>