<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_inherit_expedition_notes" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.expedition.notes</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="note" position="after">
                <br />
                <label for="expedition_notes" />
                <br />
                <field name="expedition_notes" class="oe_inline"
                placeholder="Expedition notes which are copied to stock picking"/>
            </field>
        </field>
    </record>

</odoo>
