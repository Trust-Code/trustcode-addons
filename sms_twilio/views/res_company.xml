<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sms_twilio_company_form" model="ir.ui.view">
        <field name="name">br_base.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <group position="inside">
                <group name="twilio" string="Twilio">
                    <field name="twilio_account_sid" password="True" />
                    <field name="twilio_auth_token" password="True" />
                    <field name="twilio_number" />
                </group>
            </group>
        </field>
    </record>

</odoo>
