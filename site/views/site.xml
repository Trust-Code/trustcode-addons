<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_sites_tree">
        <field name="name">Sites</field>
        <field name="model">site</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Sites">
                <field name='site_id' />
                <field name='partner_id' />
                <field name="tipo_site" />
                <field name='tipo_estrutura' />
                <field name='fabricante_id' />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_open_sites">
        <field name="name">Sites</field>
        <field name="res_model">site</field>
        <field name="view_type">form</field>
        <field name='view_mode'>tree,form</field>
        <field name='view_id' ref='view_sites_tree' />
    </record>
    <menuitem name="Sites"
              action="action_open_sites"
              id="menu_sites_all"
              parent="sale.menu_sale_invoicing"
              sequence="15"/>
</odoo>