<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_stock_delivery_info" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.stock.delivery.info</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div/div/div/h2[@id='schedule_info']" position="before">
                    <h2>Stock Delivery Info</h2>
                    <div class="row mt16 o_settings_container" id="stock_delivery_info">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_panel">
                                <label for="endpoint_stock_delivery" />
                            </div>
                            <field name="endpoint_stock_delivery" />
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>