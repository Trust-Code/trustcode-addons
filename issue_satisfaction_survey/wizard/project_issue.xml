<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_button_close_form" model="ir.ui.view">
        <field name="name">Botao de Encerramento</field>
        <field name="model">project.issue</field>
        <field name="inherit_id" ref="project_issue.project_issue_form_view"/>
        <field name="arch" type="xml">
            <header>
                <button type="object" class="oe_stat_button" icon="fa-angellist"
                    name="action_close_issue" string="Encerrar"
                    group="project_issue.grupo_cliente_externo" />
            </header>
            <xpath expr="//page[@name='extra_info']" position="inside">
              <group string="Avaliação">
                <field name="pergunta1" string="Cumpriu com as Obrigações?"/>
                <field name="pergunta2" string="Tempo de Atendimento?"/>
                <field name="pergunta3" string="Qualidade do atendimento?"/>
                <field name="pergunta4" string="Indicação"/>
              </group>
            </xpath>
        </field>
    </record>

    <record id="view_issue_satifaction_survey_form" model="ir.ui.view">
        <field name="name">Pesquisa de Satisfacao</field>
        <field name="model">project.issue.close</field>
        <field name="arch" type="xml">
            <form string="Pesquisa">
                <group>
                  <field name="pergunta1" colspan="4" widget="radio"
                           string="A CCM cumpriu com as suas obrigações no atendimento?"/>
                  <field name="pergunta2" colspan="4" widget="radio"
                          string="Favor avaliar o tempo do atendimento prestado:"/>
                  <field name="pergunta3" colspan="4" widget="radio"
                          string="Favor avaliar a qualidade do atendimento prestado:"/>
                  <field name="pergunta4" colspan="4" widget="radio"
                          string="Numa escala de 1 a 10, quanto você indicaria a nossa empresa para outras empresas?"/>
                </group>
                <footer>
                    <button name="close_issue" string="Encerrar Chamado" type="object" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_issue_satifaction_survey"
        name="Trustcode - Pesquisa de Satifação CCM"
        res_model="project.issue.close"
        view_id="view_issue_satifaction_survey_form"
        view_mode="form" target="new" view_type="form" />

</odoo>
