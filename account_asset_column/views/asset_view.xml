<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="view_accont_asset_column_number" model="ir.ui.view">
            <field name="name">account.asset.asset.inherited.tree</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_asset_purchase_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="asset_number"/>
                    <field name="project_id"/>
                </field>
            </field>
        </record>


        <record id="asset_project_form_view" model="ir.ui.view">
            <field name="name">asset.column.form.inherited</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_asset_form"/>
            <field name="arch" type="xml">
                <field name="category_id" position="after">
                    <field name="project_id"/>
                </field>
            </field>
        </record>

        <record id="account_asset_project_tree_view" model="ir.ui.view">
            <field name="name">asset.column.tree.inherited</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_asset_purchase_tree"/>
            <field name="arch" type="xml">
                <field name="value" position="replace">
                    <field name="value" sum="Total Bruto"/>
                </field>
                <field name="value_residual" position="replace">
                    <field name="value_residual" sum="Total Residual"/>
                </field>
            </field>
        </record>
    </data>
</odoo>