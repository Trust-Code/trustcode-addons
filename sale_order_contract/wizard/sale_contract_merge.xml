<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_contract_renew_wizard" model="ir.ui.view">
        <field name="name">Mesclar Contratos</field>
        <field name="model">sale.contract.merge</field>
        <field name="arch" type="xml">
            <form string="Renovar Contrato">
                <footer>
                    <button name="merge_selected_contracts" string="Mesclar Contratos"
                        type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_sale_contract_merge" model="ir.actions.act_window">
        <field name="name">Mesclar Contratos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.contract.merge</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record model="ir.values" id="sale_order_merge_contract">
        <field name="model_id" ref="sale.model_sale_order" />
        <field name="name">Mesclar Contratos</field>
        <field name="key2">client_action_multi</field>
        <field name="value" eval="'ir.actions.act_window,' + str(ref('action_view_sale_contract_merge'))" />
        <field name="key">action</field>
        <field name="model">sale.order</field>
    </record>

</odoo>
